PORT=3001

# --- CSVs / caminhos base (relativos ao diretório Backend) ---
BETANO_CSV_PATH=./data/odds_betano_final.csv
BETANO_LIGAS_CSV=./scraper/ligas_auto.csv
# lista reduzida opcional usada no modo "quick"; se não existir, cai para o LIGAS_CSV
BETANO_LIGAS_QUICK=./data/ligas_quick.csv

# --- Janela e cache do adapter (backend -> /api/football/upcoming) ---
BETANO_WINDOW_HOURS=72
BETANO_CACHE_TTL_MS=60000

# --- Execução do scraper (Node -> Python) ---
# O run-scraper.js lê HEADLESS (mantive o seu também para compat).
HEADLESS=1
BETANO_HEADLESS=1

SCRAPER_LIMIT_MS=3600000   # 1 hora
BETANO_SCRAPE_TIMEOUT_MIN=25

# --- Modo QUICK (boot rápido) ---
# Se rodar run-scraper.js sem argumentos, ele usa "quick" por padrão.
# QUICK_LIMIT limita quantos eventos por liga no quick.
BETANO_QUICK_LIMIT=2
# compat com suas chaves antigas (não são necessárias, mas não atrapalham):
BETANO_QUICK_MODE=1
BETANO_QUICK_LIGAS=8
BETANO_QUICK_LIMITE_EVENTOS=2

# --- Modo FULL (coleta completa) ---
# Em full não limite eventos (0 = sem limite). FAST_* só se você usar o seu fluxo anterior.
BETANO_LIMITE_EVENTOS=0
BETANO_FAST_MODE=1
BETANO_FAST_SPLIT=3

# --- Extras e depuração ---
BETANO_DUMP=0
PYTHON_BIN=python
